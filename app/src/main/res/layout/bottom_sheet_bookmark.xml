<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_white"
    android:paddingHorizontal="27dp">

    <!-- 상단 제목 및 아이콘 -->
    <LinearLayout
        android:id="@+id/layout_filter_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_sort"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세필터"
            android:textSize="14sp"
            android:textColor="@color/black2"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <!-- 마감 커미션 제외 스위치 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_closed_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/layout_filter_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_closed_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마감 커미션 제외"
            android:textSize="15sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_closed_filter"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_toggle_off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정렬"
        android:textSize="12sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/layout_closed_filter"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 정렬 옵션 -->
    <RadioGroup
        android:id="@+id/rg_sort_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_latest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:textSize="14sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:paddingVertical="10dp"
            android:button="@drawable/custom_radio_button"
            android:gravity="start|center_vertical"
            app:buttonTint="@null"
            android:layoutDirection="rtl"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_low_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저가순"
            android:textSize="14sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:paddingVertical="10dp"
            android:button="@drawable/custom_radio_button"
            android:gravity="start|center_vertical"
            app:buttonTint="@null"
            android:layoutDirection="rtl"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_high_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고가순"
            android:textSize="14sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:paddingVertical="10dp"
            android:button="@drawable/custom_radio_button"
            android:gravity="start|center_vertical"
            app:buttonTint="@null"
            android:layoutDirection="rtl"/>
    </RadioGroup>

    <!-- 적용 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_apply_filter"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="적용하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/btn_report_black"
        app:layout_constraintTop_toBottomOf="@id/rg_sort_options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
