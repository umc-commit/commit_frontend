<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_rounded"
   android:layout_gravity="center_horizontal"
    android:paddingVertical="25dp"
    android:paddingHorizontal="47dp">

    <ImageView
        android:id="@+id/iv_badge_popup"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/badge_applicant_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_badge_popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커미션 신청 배지 (동)"
        android:fontFamily="@font/notosanskr_semibold"
        android:textSize="12sp"
        android:textColor="@color/black1"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/iv_badge_popup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/tv_badge_popup_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조건 : 커미션 신청 횟수 1회 달성"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="10sp"
        android:textColor="@color/black1"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_badge_popup_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
