<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="프로필"
        android:textColor="@color/black1"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:src="@drawable/ic_more"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <View
        android:id="@+id/bg_profile_top"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#F1F1F1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 프로필 이미지 -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/ic_pf_charac2"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 신청자 태그 -->
    <TextView
        android:id="@+id/tv_badge"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="작가"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:textColor="@color/purple2"
        android:includeFontPadding="false"
        android:background="@drawable/bg_purple1"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키르"
        android:textSize="20sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="6dp"
        android:drawableEnd="@drawable/ic_author_check"
        android:drawablePadding="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_follower_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워 32"
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/pf_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_follower_count"
        app:layout_constraintEnd_toStartOf="@id/btn_following"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_following"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:background="@drawable/pf_unfollow"
        app:layout_constraintStart_toEndOf="@id/btn_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_follower_count"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="5dp"
        android:elevation="0dp"/>



    <!-- 소개 -->
    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="40dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/btn_chat"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_intro_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기본으로 수정 1번 해드립니다. 채팅으로 요청해주세요!"
        android:textSize="12sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_intro_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro_content" />

    <TextView
        android:id="@+id/tv_remaining_slots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은 슬롯 3개"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_slots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_remaining_slots"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/slot_1"
            style="@style/SlotImage"
            android:src="@drawable/ic_slot_filled" />

        <ImageView
            android:id="@+id/slot_2"
            style="@style/SlotImage"
            android:src="@drawable/ic_slot_empty" />

        <ImageView
            android:id="@+id/slot_3"
            style="@style/SlotImage"
            android:src="@drawable/ic_slot_empty" />

        <ImageView
            android:id="@+id/slot_4"
            style="@style/SlotImage"
            android:src="@drawable/ic_slot_empty" />

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_slots" />

    <!-- 배지 -->
    <TextView
        android:id="@+id/tv_badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배지"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_badges"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="28dp"
        android:paddingEnd="3dp"
        android:clipToPadding="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_badge_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_badges" />

    <!-- 커미션 타입 -->
    <TextView
        android:id="@+id/tv_commission_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커미션 타입"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:clipToPadding="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_commission_type"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_author_pf_card"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_card" />

    <!-- 후기 -->
    <TextView
        android:id="@+id/tv_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:src="@drawable/ic_dropdown"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_review_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_review_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:clipToPadding="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_review_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_author_pf_review"/>

            <View
                android:id="@+id/view_review_margin"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_reviews"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
