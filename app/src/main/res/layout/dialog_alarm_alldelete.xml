<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="140dp"
    android:background="@drawable/bg_bottom_sheet_white">

    <TextView
        android:id="@+id/tv_delete_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모든 알림을 삭제할까요 ?"
        android:textSize="16sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_delete"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:text="네 완료할게요"
        android:fontFamily="@font/notosanskr_semibold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:layout_marginTop="20.5dp"
        android:background="@drawable/bg_black_round_button"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
