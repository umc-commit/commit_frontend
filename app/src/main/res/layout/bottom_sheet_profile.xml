<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/bg_bottom_sheet_white">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 선택"
        android:textSize="16sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 프로필 선택 항목 -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile_rose"
        android:layout_marginTop="33dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로지"
        android:textSize="18sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:textColor="@color/black1"
        android:includeFontPadding="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image" />

    <TextView
        android:id="@+id/profile_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신청자"
        android:textSize="10sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:textColor="@color/mint2"
        android:includeFontPadding="false"
        android:background="@drawable/bg_mint3"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/profile_name"
        app:layout_constraintTop_toTopOf="@id/profile_name"
        app:layout_constraintBottom_toBottomOf="@id/profile_name"/>

    <ImageView
        android:id="@+id/check_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_checkbox_checked"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_tag"
        app:layout_constraintBottom_toBottomOf="@id/profile_tag" />

    <!-- 구분선 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:background="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 새 프로필 만들기 -->
    <ImageView
        android:id="@+id/iv_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_profile"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 프로필 만들기"
        android:textSize="16sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/iv_add_profile"
        app:layout_constraintTop_toTopOf="@id/iv_add_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_add_profile" />

    <!-- 안내 텍스트 -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최대 2개까지 만들 수 있어요."
        android:fontFamily="@font/notosanskr_regular"
        android:textSize="10sp"
        android:textColor="@color/black2"
        android:includeFontPadding="false"
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toTopOf="@id/iv_add_profile"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
