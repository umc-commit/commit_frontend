<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="프로필"
        android:textColor="@color/black1"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <View
        android:id="@+id/bg_profile_top"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#F1F1F1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 프로필 이미지 -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 신청자 태그 -->
    <TextView
        android:id="@+id/tv_badge"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="신청자"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:textColor="@color/mint2"
        android:includeFontPadding="false"
        android:background="@drawable/bg_mint3"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로지"
        android:textSize="20sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/pf_black_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintEnd_toStartOf="@id/btn_following"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_following"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_outline_gray"
        android:text="팔로잉"
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/btn_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:elevation="0dp"/>



    <!-- 소개 -->
    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="45dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_intro_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력된 소개가 없습니다."
        android:textSize="12sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="38dp"
        app:layout_constraintTop_toBottomOf="@id/tv_intro_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro_content" />

    <!-- 배지 -->
    <TextView
        android:id="@+id/tv_badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배지"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_badge_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배지 설정"
        android:textSize="10sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_badge_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_badge_title"
        android:layout_marginEnd="28dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_badges"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="28dp"
        android:paddingEnd="3dp"
        android:clipToPadding="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_badge_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#F1F1F1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_badges" />

    <!-- 후기 -->
    <TextView
        android:id="@+id/tv_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기"
        android:textSize="14sp"
        android:textColor="@color/black1"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기 공개"
        android:textSize="10sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:layout_marginEnd="69dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_review_title"
        app:layout_constraintTop_toBottomOf="@id/tv_review_title"/>

    <ImageView
        android:id="@+id/iv_review_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/iv_review_off"
        app:layout_constraintTop_toTopOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_reviews"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_review_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="38dp"
        android:paddingEnd="20dp"
        android:clipToPadding="true"
        android:scrollbars="horizontal"
        tools:listitem="@layout/item_photo_rv" />

</androidx.constraintlayout.widget.ConstraintLayout>
