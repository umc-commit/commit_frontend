<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@android:color/white">

    <!-- 카드 테두리 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/reviewCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardStrokeColor="#EBEBEB"
        app:cardStrokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 썸네일 -->
            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_thumbnail_rounded"
                android:contentDescription="썸네일"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 작성자 이름 -->
            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키르"
                android:textSize="10sp"
                android:textColor="#999999"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/ivThumbnail"
                app:layout_constraintTop_toTopOf="@id/ivThumbnail" />

            <!-- 커미션 제목 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="낙서 타입 커미션"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:fontFamily="@font/notosanskr_medium"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvNickname"
                app:layout_constraintStart_toStartOf="@id/tvNickname"
                app:layout_constraintEnd_toStartOf="@id/tvDate" />

            <!-- 작업기간 -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작업기간 : 23시간"
                android:textSize="10sp"
                android:textColor="#999999"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toTopOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 별점 -->
            <LinearLayout
                android:id="@+id/starContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/ivThumbnail">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="22dp"
                        android:layout_height="20.17dp"
                        android:src="@drawable/ic_star_off"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="22dp"
                        android:layout_height="20.17dp"
                        android:src="@drawable/ic_star_off"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="22dp"
                        android:layout_height="20.17dp"
                        android:src="@drawable/ic_star_off"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="22dp"
                        android:layout_height="20.17dp"
                        android:src="@drawable/ic_star_off"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="22dp"
                        android:layout_height="20.17dp"
                        android:src="@drawable/ic_star_off" />
            </LinearLayout>
            <!-- 후기 내용 -->
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="요청사항도 잘 들어주시고 마감도 빠르게 해주셨어요! 감사합니다."
                android:textSize="10sp"
                android:textColor="#222222"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/starContainer"
                app:layout_constraintStart_toStartOf="@id/ivThumbnail"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:text="수정"
                android:textSize="10sp"
                android:textColor="#4D4D4D"
                android:background="@drawable/bg_button_outline_gray"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvContent"
                app:layout_constraintEnd_toStartOf="@id/btnDelete"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:text="삭제"
                android:textSize="10sp"
                android:textColor="#4D4D4D"
                android:background="@drawable/bg_button_outline_gray"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvContent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
