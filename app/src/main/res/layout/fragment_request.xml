<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="신청함"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black1"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 제목 밑 라인 -->
    <View
        android:id="@+id/tvTitleLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 필터 버튼 영역 -->
    <LinearLayout
        android:id="@+id/layoutFilterSort"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitleLine"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 버튼 그룹 -->
        <LinearLayout
            android:id="@+id/filterGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <Button
                android:id="@+id/btnAll"
                style="@style/NoRippleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:minHeight="30dp"
                android:minWidth="60dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="전체"
                android:textSize="10sp"
                android:textColor="@color/filter_text_color_selector" />

            <Button
                android:id="@+id/btnInProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:minHeight="30dp"
                android:minWidth="70dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="진행 중"
                android:textSize="10sp"
                android:background="@drawable/bg_filter_button_selector"
                android:textColor="@color/filter_text_color_selector"
                android:backgroundTint="@android:color/transparent"
                android:stateListAnimator="@null"
                android:foreground="@null" />

            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:minWidth="80dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="작업 완료"
                android:textColor="@color/filter_text_color_selector"
                android:textSize="10sp"
                android:background="@drawable/bg_filter_button_selector"
                android:backgroundTint="@android:color/transparent"
                android:stateListAnimator="@null"
                android:foreground="@null" />
        </LinearLayout>
    </LinearLayout>

    <!--RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFilterSort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
