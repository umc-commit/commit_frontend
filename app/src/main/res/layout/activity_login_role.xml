<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="역할 선택"
        android:textColor="@color/black1"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_title" />

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추후 새 프로필 추가가 가능해요."
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 신청자 카드 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_applicant"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/btn_gray_rounded"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp">

        <TextView
            android:id="@+id/title_applicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="신청자로 시작하기"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/notosanskr_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/desc_applicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="원하는 커미션을 간편하게 신청해보세요."
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:textColor="@color/gray2"
            android:fontFamily="@font/notosanskr_medium"
            app:layout_constraintTop_toBottomOf="@id/title_applicant"
            app:layout_constraintStart_toStartOf="@id/title_applicant" />

        <ImageView
            android:id="@+id/check_applicant"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="27dp"
            app:srcCompat="@drawable/btn_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 작가 카드 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_creator"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_gray_rounded"
        app:layout_constraintTop_toBottomOf="@id/card_applicant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp">

        <TextView
            android:id="@+id/title_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="작가로 활동하기"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/notosanskr_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/desc_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="커미션을 받고 작업을 진행해보세요."
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:textColor="@color/gray2"
            android:fontFamily="@font/notosanskr_medium"
            app:layout_constraintTop_toBottomOf="@id/title_creator"
            app:layout_constraintStart_toStartOf="@id/title_creator" />

        <ImageView
            android:id="@+id/check_creator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="27dp"
            app:srcCompat="@drawable/btn_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 다음 버튼 (비활성화 상태) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="다음"
        android:enabled="false"
        android:layout_marginBottom="56dp"
        android:background="@drawable/login_button_gray"
        android:textColor="@color/gray2"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
