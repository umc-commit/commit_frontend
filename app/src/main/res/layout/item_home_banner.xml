<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:background="#E0F7FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#E8FBFA"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/tv_banner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="코밋에서 세상에 하나뿐인\n나만의 작품을 만나보세요!"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="14sp"
            android:textColor="@color/black1"
            android:includeFontPadding="false"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_cat_mascot" />

        <TextView
            android:id="@+id/tv_banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_semibold"
            android:text="현재 10건의 거래가 완료됐어요."
            android:textSize="10sp"
            android:textColor="@color/black2"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_banner_title"
            android:layout_marginTop="5dp" />


        <ImageView
            android:id="@+id/iv_cat_mascot"
            android:layout_width="160dp"
            android:layout_height="215dp"
            android:src="@drawable/home_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>