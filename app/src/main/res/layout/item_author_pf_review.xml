<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 별 아이콘 -->
        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_star"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 평점 -->
        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="12sp"
            android:textColor="@color/black1"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_star"
            android:layout_marginStart="5dp"/>

        <!-- 커미션명 -->
        <TextView
            android:id="@+id/tv_commission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="낙서 타입 커미션"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="12sp"
            android:textColor="@color/black1"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/tv_rating"
            app:layout_constraintBottom_toBottomOf="@id/tv_rating"
            app:layout_constraintStart_toEndOf="@id/tv_rating"
            android:layout_marginStart="16dp"/>

        <!-- 리뷰 내용 -->
        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="친절하게 응대해주셨습니다. 감사해요!"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="12sp"
            android:textColor="@color/black1"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_commission_name"
            app:layout_constraintStart_toStartOf="parent"
            android:includeFontPadding="false"
            android:layout_marginTop="13dp"
            android:paddingEnd="10dp"/>

        <!-- 작성자 -->
        <TextView
            android:id="@+id/tv_reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위시"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="10sp"
            android:textColor="@color/black2"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv_review_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 작업기간 -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2일 전"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="10sp"
            android:textColor="@color/gray2"
            android:includeFontPadding="false"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_reviewer"
            app:layout_constraintTop_toBottomOf="@id/tv_review_content"/>

        <TextView
            android:id="@+id/tv_work_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작업기간 : 12시간"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="10sp"
            android:textColor="@color/gray2"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
