<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="포토 후기"
        android:textColor="@color/black1"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_x"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />
    <!-- Photo Review Image Placeholder -->
    <ImageView
        android:id="@+id/iv_review_image"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:layout_marginTop="34dp"
        android:background="#F1F1F1"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:src="@drawable/sample_review"/>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_star"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/iv_review_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_review_image" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="5.0"
        android:textColor="@color/black1"
        android:textSize="12sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@+id/iv_star"
        app:layout_constraintTop_toBottomOf="@+id/iv_review_image" />

    <TextView
        android:id="@+id/tv_commission_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="낙서 타입 커미션"
        android:textColor="@color/black1"
        android:textSize="12sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rating"
        app:layout_constraintStart_toEndOf="@+id/tv_rating"
        app:layout_constraintTop_toTopOf="@+id/tv_rating" />

    <!-- Date -->
    <TextView
        android:id="@+id/tv_review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/notosanskr_regular"
        android:text="2025.06.02"
        android:textColor="@color/black2"
        android:textSize="10sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rating"
        app:layout_constraintEnd_toEndOf="@+id/iv_review_image"
        app:layout_constraintTop_toTopOf="@+id/tv_rating" />

    <TextView
        android:id="@+id/tv_reviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/notosanskr_regular"
        android:text="익명의 신청자"
        android:textColor="@color/black2"
        android:textSize="10sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/iv_review_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="답장도 빠르시고 잘 대해주셨어요. 감사합니다!"
        android:textColor="@color/black1"
        android:textSize="12sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reviewer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_type_post"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/btn_photo_review"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
