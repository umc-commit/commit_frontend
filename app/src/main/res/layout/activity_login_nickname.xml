<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="닉네임 입력"
        android:textColor="@color/black1"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_title" />

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코밋에서 사용할 닉네임을 입력해주세요."
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 닉네임 입력 EditText -->
    <EditText
        android:id="@+id/input_nickname"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginTop="151dp"
        android:hint="닉네임"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:maxLength="10"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/gray1"
        app:layout_constraintTop_toBottomOf="@id/input_nickname"
        app:layout_constraintStart_toStartOf="@+id/input_nickname"
        app:layout_constraintEnd_toEndOf="@+id/input_nickname" />

    <TextView
        android:id="@+id/warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="띄어쓰기 없이 한글, 영문, 숫자 10자 이하만 가능해요."
        android:textColor="@color/red1"
        android:textSize="10sp"
        android:fontFamily="@font/notosanskr_regular"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 다음 버튼 (비활성화 상태) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="다음"
        android:enabled="false"
        android:layout_marginBottom="56dp"
        android:background="@drawable/login_button_gray"
        android:textColor="@color/gray2"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
