<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <!-- 삭제 모드 체크박스 -->
    <ImageView
        android:id="@+id/iv_select_mode"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_delete_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cv_alarm_card"/>

    <!-- 알림 카드 전체 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_alarm_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_select_mode"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp">

            <!-- 알림 아이콘 -->
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_payment"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- 상단 헤더 -->
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="결제 요청이 도착했어요"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="10sp"
                android:textColor="@color/gray2"
                android:layout_marginStart="7dp"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_icon"/>

            <!-- 시간 -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방금"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="10sp"
                android:textColor="@color/gray2"
                android:includeFontPadding="false"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 읽지 않음 빨간점 -->
            <ImageView
                android:id="@+id/iv_unread_dot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_red_dot"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

            <!-- 내용 -->
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="키르님이 40,000 포인트 결제 요청을 보냈어요."
                android:fontFamily="@font/notosanskr_semibold"
                android:textSize="12sp"
                android:textColor="@color/black1"
                android:includeFontPadding="false"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_header"
                app:layout_constraintStart_toStartOf="@id/tv_header"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 바로가기 -->
            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제하러 가기 >"
                android:fontFamily="@font/notosanskr_semibold"
                android:textSize="10sp"
                android:textColor="@color/mint2"
                android:includeFontPadding="false"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                app:layout_constraintStart_toStartOf="@id/tv_header"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
