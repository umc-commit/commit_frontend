<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="344dp"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <!-- 상태 텍스트 -->
        <TextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행 중"
            android:textColor="@color/black1"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 우측 화살표 아이콘 -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/vector"
            app:layout_constraintTop_toTopOf="@id/tvRequestStatus"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 썸네일 이미지 -->
        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/gray3"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvRequestStatus"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 작가 닉네임 -->
        <TextView
            android:id="@+id/tvArtistNickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="사과"
            android:textColor="@color/gray2"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/ivThumbnail"
            app:layout_constraintStart_toEndOf="@id/ivThumbnail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 커미션 제목 -->
        <TextView
            android:id="@+id/tvRequestTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="낙서 타입 커미션"
            android:textStyle="bold"
            android:textColor="@color/black1"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvArtistNickname"
            app:layout_constraintStart_toEndOf="@id/ivThumbnail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 가격 -->
        <TextView
            android:id="@+id/tvRequestPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="16,000P"
            android:textColor="@color/black2"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvRequestTitle"
            app:layout_constraintStart_toEndOf="@id/ivThumbnail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 문의하기 -->
        <TextView
            android:id="@+id/tvInquiry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="작가에게 문의하기 >"
            android:textColor="@color/black2"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvRequestPrice"
            app:layout_constraintStart_toEndOf="@id/ivThumbnail"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 상태바 텍스트 그룹 -->
        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/ivThumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수락"
                android:textSize="12sp"
                android:textColor="@color/gray2"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="진행중"
                android:textSize="12sp"
                android:textColor="@color/mint1"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="작업완료"
                android:textSize="12sp"
                android:textColor="@color/gray2"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 진행 바 -->
        <ProgressBar
            android:id="@+id/requestProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:progress="50"
            android:max="100"
            android:progressTint="@color/mint1"
            android:progressBackgroundTint="@color/gray1"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/statusBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
