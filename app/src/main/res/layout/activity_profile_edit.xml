<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:text="프로필 수정"
        android:textColor="@color/black1"
        android:textSize="18dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <!-- 프로필 이미지 -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 프로필 이미지 변경 아이콘 -->
    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pf_camera"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="@id/iv_profile" />

    <!-- 닉네임 타이틀 -->
    <TextView
        android:id="@+id/tv_nickname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/black1"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="40dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 닉네임 입력 -->
    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="닉네임을 작성해주세요."
        android:background="@drawable/edittext_outline_gray"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_regular"

        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp" />

    <!-- 닉네임 안내문구 -->
    <TextView
        android:id="@+id/tv_nickname_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한글, 영어, 숫자만 사용할 수 있어요. (최대 10자)"
        android:textColor="@color/gray2"
        android:textSize="10sp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        android:layout_marginStart="38dp"
        app:layout_constraintTop_toBottomOf="@id/et_nickname"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 소개 타이틀 -->
    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textColor="@color/black1"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_guide"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp" />

    <!-- 소개 입력 -->
    <EditText
        android:id="@+id/et_intro"
        android:layout_width="0dp"
        android:layout_height="178dp"
        android:hint="소개글을 작성해주세요."
        android:background="@drawable/edittext_outline_gray"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:gravity="top|start"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_intro_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:id="@+id/tv_intro_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/gray2"
        android:textSize="8sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanskr_regular"
        app:layout_constraintBottom_toBottomOf="@id/et_intro"
        app:layout_constraintEnd_toStartOf="@id/tv_intro_max"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="2dp"/>

    <!-- 소개 글자수 -->
    <TextView
        android:id="@+id/tv_intro_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/1000"
        android:textColor="@color/gray2"
        android:textSize="8sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanskr_regular"
        app:layout_constraintBottom_toBottomOf="@id/et_intro"
        app:layout_constraintEnd_toEndOf="@id/et_intro"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="11dp"/>

    <!-- 적용하기 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_apply"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/btn_edit1"
        android:fontFamily="@font/notosanskr_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
